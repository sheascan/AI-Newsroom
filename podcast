#!/bin/bash

# 1. Activate the brain (Virtual Environment)
source ~/podcast_studio/venv/bin/activate

# 2. Check for the magic word
if [ "$1" == "RESUME" ]; then
    # If user typed './podcast RESUME', tell Python to load the cache
    python3 main.py RESUME
else
    # Otherwise, start fresh
    python3 main.py
fi
